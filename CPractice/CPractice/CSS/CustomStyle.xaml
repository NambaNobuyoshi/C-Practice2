<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:system="clr-namespace:System;assembly=netstandard">
    
    <!--フォントサイズ start-->
    <system:Double x:Key="FontSizeMidashi">20</system:Double>
    <!--フォントサイズ end  -->
    
    <Style TargetType="TextBlock" x:Key="Midashi">
        <Setter Property="FontSize" Value="{StaticResource FontSizeMidashi}"/>
    </Style>
</ResourceDictionary>